# Cohesion Portal Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# HubSpot Configuration
# =============================================================================
# Get this from HubSpot: Settings > Integrations > Private Apps
HUBSPOT_ACCESS_TOKEN=pat-na2-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Custom object type ID for p_client_projects
HUBSPOT_CUSTOM_OBJECT_TYPE=2-171216725

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
# Railway provides this automatically, or use local Docker
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cohesion_portal

# =============================================================================
# Authentication
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-here-generate-a-secure-one
MAGIC_LINK_SECRET=your-magic-link-secret-here-generate-a-secure-one

# Session expiry in days
SESSION_EXPIRY_DAYS=7

# Magic link expiry in minutes
MAGIC_LINK_EXPIRY_MINUTES=15

# =============================================================================
# Email (for magic links)
# =============================================================================
# Using SendGrid example - adjust for your email provider
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

FROM_EMAIL=noreply@example.com
FROM_NAME=Cohesion Portal

# =============================================================================
# File Storage
# =============================================================================
# Option A: AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=cohesion-portal-files
AWS_S3_REGION=us-east-1

# Option B: Local/Railway Volume (set this if not using S3)
FILE_STORAGE_PATH=./uploads

# =============================================================================
# Application URLs
# =============================================================================
# Frontend URL (for magic link emails)
FRONTEND_URL=http://localhost:5173

# Backend URL
BACKEND_URL=http://localhost:3000

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# Admin Access
# =============================================================================
# Initial admin API key for setup (can be disabled after OAuth is configured)
ADMIN_API_KEY=your-admin-api-key-here

# =============================================================================
# Node.js
# =============================================================================
NODE_ENV=development
PORT=3000
