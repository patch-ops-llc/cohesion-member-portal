# Cohesion Portal Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# HubSpot Configuration (REQUIRED)
# =============================================================================
# Get this from HubSpot: Settings > Integrations > Private Apps
HUBSPOT_ACCESS_TOKEN=pat-na2-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Custom object type ID for p_client_projects
HUBSPOT_CUSTOM_OBJECT_TYPE=2-171216725

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
# Railway provides this automatically, or use local Docker
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cohesion_portal

# =============================================================================
# Admin Access (REQUIRED)
# =============================================================================
# Password for staff to access /admin dashboard
ADMIN_API_KEY=your-admin-api-key-here

# =============================================================================
# Application URLs
# =============================================================================
FRONTEND_URL=http://localhost:5173

# Comma-separated origins for CORS. Include:
# - Your frontend URL (e.g. https://your-app.up.railway.app)
# - HubSpot for UIE card: https://app.hubspot.com,https://app-eu1.hubspot.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://app.hubspot.com,https://app-eu1.hubspot.com

# =============================================================================
# File Storage
# =============================================================================
FILE_STORAGE_PATH=./uploads

# =============================================================================
# Node.js
# =============================================================================
NODE_ENV=development
PORT=3000
