# Backend Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
# Railway provides this automatically
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cohesion_portal

# =============================================================================
# HubSpot Configuration
# =============================================================================
HUBSPOT_ACCESS_TOKEN=pat-na2-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
HUBSPOT_CUSTOM_OBJECT_TYPE=2-171216725

# =============================================================================
# File Storage
# =============================================================================
FILE_STORAGE_PATH=./uploads

# =============================================================================
# Application URLs
# =============================================================================
FRONTEND_URL=http://localhost:5173
# Include HubSpot domains for the CRM card; add your Railway URL when deployed
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://app.hubspot.com,https://app-eu1.hubspot.com,https://cohesion-member-portal-production.up.railway.app

# =============================================================================
# Authentication (JWT + Password)
# =============================================================================
JWT_SECRET=your-jwt-secret-min-32-chars-long
JWT_EXPIRY=7d

# =============================================================================
# Email (Resend - notifications)
# =============================================================================
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxx
FROM_EMAIL=onboarding@resend.dev
FROM_NAME=Cohesion Portal
# Comma-separated list of admin emails to receive notifications
ADMIN_NOTIFICATION_EMAILS=admin@example.com

# =============================================================================
# Admin Access
# =============================================================================
ADMIN_API_KEY=your-admin-api-key-here

# =============================================================================
# Node.js
# =============================================================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
